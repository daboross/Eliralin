diff --git a/plugins/circle.py b/plugins/circle.py
new file mode 100644
index 0000000..01931bb
--- /dev/null
+++ b/plugins/circle.py
@@ -0,0 +1,43 @@
+from util import hook
+import collections
+
+colors = collections.OrderedDict([
+  ('red',     '\x0304'),
+  ('ornage',  '\x0307'),
+  ('yellow',  '\x0308'),
+  ('green',   '\x0309'),
+  ('cyan',    '\x0303'),
+  ('ltblue',  '\x0310'),
+  ('rylblue', '\x0312'),
+  ('blue',    '\x0302'),
+  ('magenta', '\x0306'),
+  ('pink',    '\x0313'),
+  ('maroon',  '\x0305')
+]).items()
+stuff = """-
+=       ____________
+=      /\  ________ \
+=     /  \ \______/\ \
+=    / /\ \ \  / /\ \ \
+=   / / /\ \ \/ / /\ \ \
+=  / / /__\_\/ / /__\_\ \
+= / /_/_______/ /________\
+= \ \ \______ \ \______  /
+=  \ \ \  / /\ \ \  / / /
+=   \ \ \/ / /\ \ \/ / /
+=    \ \/ / /__\_\/ / /
+=     \  / /______\/ /
+=      \/___________/
+="""
+output = []
+l = len(colors)
+for line in stuff.split("\n="):
+    newline = ""
+    for i, char in enumerate(stuff):
+        newline += colors[i % l][1] + char
+    output.extend(newline)
+
+@hook.command
+def circle(inp, message=None):
+    for line in output:
+        message(line)
diff --git a/plugins/tree.py b/plugins/tree.py
new file mode 100644
index 0000000..949014a
--- /dev/null
+++ b/plugins/tree.py
@@ -0,0 +1,27 @@
+from util import hook
+
+
+@hook.command(autoHelp=False, permissions=['adminonly'])
+def tree(inp, message=None):
+    make_tree(inp, message, spaces=5, func=lambda c: c[1:-1])
+
+
+@hook.command(autoHelp=False, permissions=['adminonly'])
+def tree2(inp, message=None):
+    make_tree(inp, message, spaces=5, func=lambda c: c[2:])
+
+
+@hook.command(autoHelp=False, permissions=['adminonly'])
+def tree3(inp, message=None):
+    make_tree(inp, message, spaces=7, func=lambda c: c[:-2])
+
+
+def make_tree(inp, message, spaces=6, func=None):
+    """ tree - Tree text """
+    current = inp
+    while len(current) > 0:
+        spaces += 1
+        message(spaces * ' ' + current)
+        current = func(current)
+
+    message((spaces - 1) * ' ' + ('----' if len(inp) % 2 == 0 else '---'))
