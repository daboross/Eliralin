index dd259a3..834b41b 100644
--- a/plugins/karma.py
+++ b/plugins/karma.py
@@ -66,7 +66,7 @@ def allowed(db, nick, nick_vote):
 # TODO Make this work on multiple matches in a string, right now it'll only
 # work on one match.
 # karma_re = ('((\S+)(\+\+|\-\-))+', re.I)
-karma_re = ('(.+)(\+\+|\-\-)$', re.I)
